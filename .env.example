# Почтовые настройки
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Настройки модели (оставьте пустым для автоматического поиска)
MODEL_PATH=
MODEL_TYPE=gguf
MODEL_CONTEXT_SIZE=4096
MODEL_TEMPERATURE=0.1

# GPU ускорение для LLM
MODEL_N_GPU_LAYERS=-1
MODEL_N_BATCH=512
MODEL_MAX_TOKENS=100

# API fallback для ускорения (опционально)
# Groq - бесплатно, очень быстро (https://console.groq.com/)
GROQ_API_KEY=
# OpenAI - платно (https://platform.openai.com/)
OPENAI_API_KEY=

# Настройки Excel
EXCEL_FILE_PATH=./data/documents.xlsx
EXCEL_SHEET_NAME=Документы

# Настройки агента
CHECK_INTERVAL_MINUTES=5
AUTO_REPLY_ENABLED=true
LOG_LEVEL=INFO